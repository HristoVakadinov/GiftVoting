@model IEnumerable<VotingSessionViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h2>Completed Voting Sessions</h2>
            <hr />
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            <div class="col">
                @foreach (var session in Model)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-3">
                                    <h5 class="mb-0">@session.BirthdayPersonName</h5>
                                    <small class="text-muted">Created by: @session.CreatedByName</small>
                                </div>
                                <div class="col-md-3">
                                    <p class="mb-0">Started: @session.CreatedDate.ToString("MMM dd, yyyy")</p>
                                    <small class="text-muted">
                                        Ended: @(session.EndDate?.ToString("MMM dd, yyyy") ?? "Active")
                                    </small>
                                </div>
                                <div class="col-md-3">
                                    <span class="badge bg-info">
                                        Total Votes: @session.VotesCount
                                    </span>
                                </div>
                                <div class="col-md-3 text-end">
                                    <a href="@Url.Action("SessionResults", new { sessionId = session.VotingSessionId })"
                                    class="btn btn-primary">
                                        View Results
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No completed voting sessions found.
        </div>
    }
</div>